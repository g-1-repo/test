{
  "name": "@go-corp/test-suite",
  "version": "1.2.2",
  "description": "Complete testing suite for Hono applications across Cloudflare Workers, Node.js, and Bun runtimes",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "go-test-suite": "./dist/cli/test-runner.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/test-runner.js",
      "types": "./dist/cli/test-runner.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test-runner": "bun run src/cli/test-runner.ts",
    "release": "bunx go-workflow release",
    "workflow:release": "bunx go-workflow release",
    "workflow:status": "bunx go-workflow status",
    "test": "echo \"Warning: no test suite available\" && exit 0",
    "test:ci": "echo \"Warning: no test suite available\" && exit 0"
  },
  "keywords": [
    "testing",
    "test-framework",
    "cloudflare-workers",
    "hono",
    "typescript",
    "cookies",
    "session-management"
  ],
  "author": "Go Corp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/golive-dev/go-test-suite"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.6",
    "hono": "^4.10.1",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@go-corp/workflow": "^2.12.11",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.8.1",
    "eslint": "^9.38.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@go-corp/utils": "^1.7.0",
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.6.2",
    "cosmiconfig": "^9.0.0",
    "enquirer": "^2.4.1",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "listr2": "^9.0.4",
    "zod": "^4.1.12"
  }
}
